---
import "@fontsource/inter";
import "@fontsource/outfit";
import "../styles/global.css";
import { Navbar } from "@/components/Navbar";
import { Footer } from "@/components/Footer";

import { getImage } from "astro:assets";
import Logo from "../assets/Logo.png";

const optimizedLogoImage = await getImage({src: Logo, format: 'webp', width: 64, height: 64});

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Freelance Software Engineer specializing in Web Apps, Kotlin, and Backend Development." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/avatar.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <script is:inline>
      const getThemePreference = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };
      const isDark = getThemePreference() === 'dark';
      document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
   
      if (typeof localStorage !== 'undefined') {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
        observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
      }
    </script>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased text-foreground overflow-x-hidden selection:bg-primary selection:text-primary-foreground">
    <Navbar client:load logo={optimizedLogoImage.src} />
    <main class="flex flex-col min-h-screen">
      <slot />
    </main>
    <Footer client:visible />
  </body>
</html>
